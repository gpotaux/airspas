<div class="container text-center mt-5 booking-card">
  <h1 class="my-5">My dashboard</h1>
  <div class="row">
  <% @spas.each do |spa| %>
    <% unless spa.bookings.empty? %>
      <% spa.bookings.each do |booking| %>
        <div class="col-sm-12 col-md-12 col-lg-6 <% spa.bookings.count > 1 ? "col-xl-6" : "col-xl-12" %> mb-5">
          <div class="dashboard-card-trip">
            <%= cl_image_tag spa.photo.key, crop: :fill %>
            <h2 class="text-center mt-2 dashboard-card-title"><%= spa.name %></h2>
            <div class="dashboard-card-trip-infos">
              <div>
                <p><strong>Date de d√©but</strong> : <%= booking.start_date %></p>
                <p><strong>Date de fin</strong> : <%= booking.end_date %></p>
              </div>
              <div class="mt-2">
                <p><strong>Status</strong> : <%= booking.status %></p>
                <% if booking.status == "validated" %>
                  <%= link_to 'Pending', edit_booking_path(booking, {status: "pending"}), class: "btn btn-secondary" %>
                  <%= link_to 'Refuser', edit_booking_path(booking, {status: "declined"}), class: "btn btn-danger text-white"  %>
                <% elsif booking.status == "declined" %>
                  <%= link_to 'Pending', edit_booking_path(booking, {status: "pending"}), class: "btn btn-secondary" %>
                  <%= link_to 'Valider', edit_booking_path(booking, {status: "validated"}), class: "btn btn-primary" %>
                <% else %>
                  <%= link_to 'Valider', edit_booking_path(booking, {status: "validated"}), class: "btn btn-primary" %>
                  <%= link_to 'Refuser', edit_booking_path(booking, {status: "declined"}), class: "btn btn-danger text-white"  %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
