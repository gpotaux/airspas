<div class="container form-resize mt-5">
  <h2 class="text-center">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "Entrez votre adresse mail",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: 'Mot de passe',
                  required: false,
                  placeholder: "Entrez votre mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi",as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "login-btn" %>
    </div>
  <% end %>

  <div class="mt-3">
    <div class="d-flex flex-column">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "signup-btn mb-3" %>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgotpwd-btn mb-3" %>
      <% end %>
    </div>
  </div>
</div>
